# Example environment variables
# Copy to .env and replace values before running locally

# Redis (local staging)
# For local Docker compose (see docker-compose.redis.yml)
#  - password is passed via REDIS_PASSWORD
#  - URL example below is safe for local dev only (do NOT commit real secrets)
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://default:your_redis_password_here@127.0.0.1:6379

# MongoDB
MONGO_URI=mongodb://localhost:27017/yourdb

# Postgres (optional)
PG_CONN=postgres://user:password@localhost:5432/yourdb

# JWT secret used by server auth
JWT_SECRET=supersecret_jwt_key

# Other runtime flags
PORT=5000
# Copy this file to .env and fill in values for local development
# Required
MONGO_URI=
REDIS_URL=

# JWT secrets (development defaults provided if not set)
JWT_SECRET=dev_jwt_secret
JWT_REFRESH_SECRET=dev_refresh_secret

# Token expiry
ACCESS_EXPIRES_IN=1h
REFRESH_EXPIRES_IN=7d

# Optional: cloudinary, S3, other service keys
#CLOUDINARY_URL=
#S3_ENDPOINT=

# Point-of-sale (POS) list/download settings
# - `POS_LIST_FALLBACK_FILES` can be a JSON array of fully-qualified URLs
#   or filenames. If you supply filenames, `POS_FILE_URL_TEMPLATE` will be
#   used to construct a full download URL where `{filename}` is replaced.
# Example (fully-qualified URL array):
POS_LIST_FALLBACK_FILES=["https://example.com/sample.csv"]
# Example (use filename + template):
# POS_LIST_FALLBACK_FILES=["sample.csv"]
# POS_FILE_URL_TEMPLATE=https://biggsph.com/pos_files/{filename}

# Debug helper: enable verbose POS logs (true/false)
# POS_DEBUG=true